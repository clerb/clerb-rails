<% content_for(:body_attributes) do %>
  data-turbolinks="false"
<% end %>

<section id="event">
  <div class="container">
    <h2 class="text-center text-uppercase text-secondary mb-0">Request New Business Listing</h2>
    <hr class="star-dark mb-5">

    <%= form_for @company, url: { action: "create" } do |form| %>
      <div class="form-group">
        <%= form.label :company_name, "Company Name" %>
        <%= form.text_field :company_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :website, "Website" %>
        <%= form.text_field :website, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :image_url, "Url for Company Logo" %>
        <%= form.text_field :image_url, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :additional_comments, "Additional Comments (NOTE: this information will be publicly visible on GitHub)" %>
        <%= form.text_area :additional_comments, class: "form-control" %>

      </div>
      <%= form.submit "Send Request", class: 'btn btn-success' %>
    <% end  %>
  </div>
</section>
